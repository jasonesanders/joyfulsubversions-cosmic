---
import Layout from '../layouts/Layout.astro';
import CosmicOrb from '../components/CosmicOrb.astro';
import Services from '../components/Services.astro';
import BrandGrid from '../components/BrandGrid.astro';
---

<Layout title="Joyful Subversions">
	<CosmicOrb />
	
	<!-- Hero Section -->
	<section id="hero" class="section-container flex-col min-h-screen">
		<h1 class="hero-heading mb-6 text-center">
			Joyful<br />Subversions
		</h1>
		<p class="body-text opacity-80 max-w-2xl text-center">
			Putting humans at the centre of technological process.
		</p>
	</section>

	<!-- Manifesto Section -->
	<section id="manifesto" class="section-container">
		<h2 class="section-heading text-center">
			Your guide to an uncertain future.
		</h2>
	</section>

	<!-- Services Section -->
	<Services />

    <!-- Brands Section -->
    <BrandGrid />

	<!-- About Section (Light Mode) -->
	<section id="about" class="section-container-left text-off-white">
		<div class="content-wrapper">
			<h2 class="section-heading mb-8">The Shift.</h2>
			<p class="body-text-lg">
				A small experimentation lab in East Van.
			</p>
		</div>
	</section>

	<!-- Footer -->
	<section id="footer" class="section-container flex-col p-8 min-h-[50vh]">
		<h3 class="section-heading text-center leading-none mb-8">
			Thanks for stopping by.
		</h3>
		<div class="mt-12 flex gap-8">
			<a href="mailto:sup@joyfulsubversions.com" class="body-text link-hover text-gradient">sup@joyfulsubversions.com</a>
		</div>
        <div class="mt-auto pt-24 text-small text-white/30">
            Â© {new Date().getFullYear()} Joyful Subversions. All rights reserved.
        </div>
	</section>

	<script>
		import { gsap } from 'gsap';
		import { ScrollTrigger } from 'gsap/ScrollTrigger';

		gsap.registerPlugin(ScrollTrigger);

		const tl = gsap.timeline({
			scrollTrigger: {
				trigger: "body",
				start: "top top",
				end: "bottom bottom",
				scrub: 1,
			}
		});

		// Hero -> Manifesto: Scale up and Blur
		tl.to('.orb-scaler', {
			scale: 3,
			filter: 'blur(40px)',
			duration: 1,
			ease: "power1.inOut"
		}, 0); // Start at beginning

		// Manifesto -> About: Fade out
		tl.to('.orb-scaler', {
			opacity: 0,
			duration: 0.5,
			ease: "power1.inOut"
		}, 0.8); // Overlap slightly or start after
	</script>
</Layout>
