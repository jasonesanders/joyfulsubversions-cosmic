---
import Layout from '../layouts/Layout.astro';
import CosmicOrb from '../components/CosmicOrb.astro';
import Services from '../components/Services.astro';
---

<Layout title="Joyful Subversions Cosmic">
	<CosmicOrb />
	
	<!-- Hero Section -->
	<section id="hero" class="section-container flex-col min-h-screen">
		<h1 class="hero-heading mb-6 text-center">
			Joyful<br />Subversions
		</h1>
		<p class="body-text opacity-80 max-w-2xl text-center">
			Putting humans at the centre <br />of technological process.
		</p>
	</section>

	<!-- Manifesto Section -->
	<section id="manifesto" class="section-container">
		<h2 class="section-heading text-center">
			Your guide to an uncertain future.
		</h2>
	</section>

	<!-- Services Section -->
	<Services />

	<!-- About Section (Light Mode) -->
	<section id="about" class="section-container-left text-off-white">
		<div class="content-wrapper">
			<h2 class="section-heading mb-8">The Shift.</h2>
			<p class="body-text-lg">
				A small experimentation lab in East Van.
			</p>
		</div>
	</section>

	<!-- Gallery Section -->
	<section id="gallery" class="section-container-top overflow-hidden">
		<h2 class="section-heading mb-12 opacity-100">Redacted Work.</h2>
		<div class="flex gap-8 overflow-x-auto pb-8">
			<!-- Placeholder Cards -->
			{[1, 2, 3].map((i) => (
				<div class="glass-card card-hover flex-shrink-0 w-[400px] h-[500px] p-8 flex items-end">
					<span class="subsection-heading">Project 0{i}</span>
				</div>
			))}
		</div>
	</section>

	<!-- Footer -->
	<section id="footer" class="section-container flex-col p-8">
		<h3 class="section-heading text-center leading-none">
			Thanks for stopping by.
		</h3>
		<div class="mt-12 flex gap-8">
			<a href="mailto:sup@joyfulsubversions.com" class="body-text link-hover">sup@joyfulsubversions.com</a>
		</div>
	</section>

	<script>
		import { gsap } from 'gsap';
		import { ScrollTrigger } from 'gsap/ScrollTrigger';

		gsap.registerPlugin(ScrollTrigger);

		const tl = gsap.timeline({
			scrollTrigger: {
				trigger: "body",
				start: "top top",
				end: "bottom bottom",
				scrub: 1,
			}
		});

		// Hero -> Manifesto: Scale up and Blur
		tl.to('.orb-scaler', {
			scale: 3,
			filter: 'blur(40px)',
			duration: 1,
			ease: "power1.inOut"
		}, 0); // Start at beginning

		// Manifesto -> About: Fade out
		tl.to('.orb-scaler', {
			opacity: 0,
			duration: 0.5,
			ease: "power1.inOut"
		}, 0.8); // Overlap slightly or start after

		// About -> Gallery: Stay hidden (no op needed, or hold)
		
		// Gallery -> Footer: Reappear - REMOVED based on feedback
